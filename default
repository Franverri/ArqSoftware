upstream node {
	server 127.0.0.1:3000;
	server 127.0.0.1:3001;
}

upstream py {
	server 127.0.0.1:3002;
	server 127.0.0.1:3003;
}

server {
	listen 80;

	location /node {
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_pass http://node/;
	}

		location /py {
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_pass http://py/;
	}
}